<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f4f400"
    android:layout_height="match_parent">
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Texto Frase"
    android:id="@+id/tvParty"
    android:textSize="20dp"
    android:textColor="#890000"
    android:layout_below="@+id/tvCandidate"
    android:layout_toRightOf="@+id/imageCandidate"
    android:layout_toEndOf="@+id/imageCandidate" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Titulo Frase"
    android:id="@+id/tvCandidate"
    android:textSize="25dp"
    android:textColor="#000000"
    android:textStyle="bold"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/imageCandidate"
    android:layout_toEndOf="@+id/imageCandidate" />

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:id="@+id/imageCandidate"
    android:cropToPadding="false"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_alignBottom="@+id/tvParty"
    android:maxHeight="100dp"
    android:maxWidth="70dp"
    android:adjustViewBounds="true" />

</RelativeLayout>
